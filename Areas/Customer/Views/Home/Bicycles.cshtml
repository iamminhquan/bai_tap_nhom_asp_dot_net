@model IEnumerable<BaiTapNhom02_Lan_02.Models.Product>

<div class="bikes">
    <div class="mountain-sec mb-5">
        <h2>MOUNTAIN BIKES</h2>
        <div class="row">
            <!-- Bootstrap row để tạo grid -->
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 bike">
                    <!-- Mỗi item là 1 cột, responsive -->
                    <img src="~/images/@item.ImageUrl"
                         alt="@item.ProductName"
                         class="img-fluid"
                         style="width:100%; height:200px; object-fit:cover;" />

                    <div class="bike-cost">
                        <div class="bike-mdl">
                            <h4>@item.ProductName <span>Mã: @item.ProductId</span></h4>
                        </div>
                        <div class="bike-cart">
                            <a class="buy" asp-controller="Home" asp-action="Single" asp-route-id="@item.ProductId">
                                BUY NOW
                            </a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="fast-viw">
                        <a asp-controller="Home" asp-action="Single" asp-route-id="@item.ProductId">Quick View</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

